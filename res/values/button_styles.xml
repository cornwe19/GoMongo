<?xml version="1.0" encoding="utf-8"?>
<resources>
  
  <style name="NavButton">
    <item name="android:scaleType">centerInside</item>
    <item name="android:padding">0dip</item>
    <item name="android:background">@null</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/nav_button_size</item>
    <item name="android:layout_weight">0.2</item>
  </style>
  
  <style name="MapMarkerButton">
    <item name="android:paddingLeft">5dp</item>
    <item name="android:paddingRight">5dp</item>
    
    <item name="android:textSize">16dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#CCC</item>
    
    <item name="android:background">@drawable/more_details_button</item>
  </style>
  
  <style name="MongoButton" parent="@style/ShadowText">
    <item name="android:background">@drawable/mongo_button</item>
    <item name="android:textColor">@drawable/mongo_button_color</item>
    <item name="android:textSize">@dimen/burweed_text_size</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">@dimen/centered_button_width</item>
  </style>
  
  <style name="FoodCounter">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginRight">-12dip</item>
    <item name="android:textColor">#FFF</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_centerVertical">true</item>
  </style>
  
</resources>
