<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:constantSize="true">
   <item android:state_pressed="false">
     <shape android:shape="oval">
          <gradient android:startColor="#C33"
                    android:endColor="#933" 
                    android:angle="270"/> 
          <corners android:bottomRightRadius="5dp" 
                   android:bottomLeftRadius="5dp" 
                   android:topLeftRadius="5dp" 
                   android:topRightRadius="5dp"/>
          <padding android:left="8dip"
                   android:right="8dip" />
          <size android:width="24dip"
                android:height="24dip" />
          <stroke android:color="#D55"
                  android:width="2dp" />
      </shape>
   </item>
   <item android:state_pressed="true"> 
		<shape android:shape="oval">
		    <gradient android:startColor="#933" 
		              android:endColor="#C33" 
		              android:angle="270"/> 
		    <corners android:bottomRightRadius="5dp" 
		             android:bottomLeftRadius="5dp" 
		             android:topLeftRadius="5dp" 
		             android:topRightRadius="5dp"/>
       <padding android:left="8dip"
                android:right="8dip" />
		    <size android:width="15dip"
                android:height="15dip" />
        <stroke android:color="#D55"
                android:width="2dp" />
		</shape>
	</item>
</selector>