<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:constantSize="true">
   <item android:state_pressed="false">
     <shape android:shape="oval">
          <gradient android:startColor="#3C3"
                    android:endColor="#393" 
                    android:angle="270"/> 
          <corners android:bottomRightRadius="5dp" 
                   android:bottomLeftRadius="5dp" 
                   android:topLeftRadius="5dp" 
                   android:topRightRadius="5dp"/>
          <padding android:left="6dip"
                   android:right="6dip" />
          <size android:width="24dip"
                android:height="24dip" />
          <stroke android:color="#5D5"
                  android:width="2dp" />
      </shape>
   </item>
   <item android:state_pressed="true"> 
		<shape android:shape="oval">
		    <gradient android:startColor="#393" 
		              android:endColor="#3C3" 
		              android:angle="270"/> 
		    <corners android:bottomRightRadius="5dp" 
		             android:bottomLeftRadius="5dp" 
		             android:topLeftRadius="5dp" 
		             android:topRightRadius="5dp"/>
       <padding android:left="6dip"
                android:right="6dip" />
		    <size android:width="15dip"
                android:height="15dip" />
        <stroke android:color="#5D5"
                android:width="2dp" />
		</shape>
	</item>
</selector>