<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <include layout="@layout/navigation_menu" />
  <LinearLayout android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/create_bowl_root"
              android:background="@drawable/create_bowl_background_begin">
	  <TextView style="@style/ActivityTitle"
	            android:text="@string/title_create_bowl_activity" />
	  <LinearLayout android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:orientation="vertical"
	                android:gravity="center|bottom">
	    <EditText android:hint="@string/hint_name_your_bowl"
	              android:background="#00000000"
	              android:textColor="#FFF"
	              android:textColorHint="#FFF"
	              android:gravity="center"
	              android:cursorVisible="false"
	              android:layout_height="wrap_content"
	              android:layout_width="wrap_content"
	              android:textStyle="bold"
	              android:layout_marginBottom="66dp" />
	    
	    <Button android:layout_width="@dimen/centered_button_width"
	            android:layout_height="wrap_content"
	            android:text="@string/button_meat_seafood"
	            android:id="@+id/button_meat_seafood" />
	    <Button android:layout_width="@dimen/centered_button_width"
	            android:layout_height="wrap_content"
	            android:text="@string/button_veggies"
	            android:id="@+id/button_veggies" />
	    <Button android:layout_width="@dimen/centered_button_width"
	            android:layout_height="wrap_content"
	            android:text="@string/button_sauces"
	            android:id="@+id/button_sauces" />
	    <Button android:layout_width="@dimen/centered_button_width"
	            android:layout_height="wrap_content"
	            android:text="@string/button_spices"
	            android:id="@+id/button_spices" />
	  </LinearLayout>
  </LinearLayout>
</LinearLayout>
